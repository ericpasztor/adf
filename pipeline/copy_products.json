{
	"name": "copy_products",
	"properties": {
		"activities": [
			{
				"name": "cpy_products",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "sdbxfs//products.csv"
					},
					{
						"name": "Destination",
						"value": "sdbxfs//products_output.csv"
					}
				],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings",
							"skipLineCount": 0
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"validateDataConsistency": false,
					"translator": {
						"value": "@json(pipeline().parameters.mappingParam)",
						"type": "Expression"
					}
				},
				"inputs": [
					{
						"referenceName": "SourceDataset_ope",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DestinationDataset_ope",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"mappingParam": {
				"type": "string",
				"defaultValue": "{             \"type\": \"TabularTranslator\",             \"mappings\": [                 {                     \"source\": {                         \"name\": \"ProductId\",                         \"type\": \"Integer\"                     },                     \"sink\": {                         \"name\": \"ProductId\",                         \"type\": \"Integer\"                     }                 }, \t\t\t{                     \"source\": {                         \"name\": \"ProductName\",                         \"type\": \"String\"                     },                     \"sink\": {                         \"name\": \"ProductName\",                         \"type\": \"String\"                     }                 }, {                     \"source\": {                         \"name\": \"Category\",                         \"type\": \"String\"                     },                     \"sink\": {                         \"name\": \"Category\",                         \"type\": \"String\"                     }                 }, {                     \"source\": {                         \"name\": \"ListPrice\",                         \"type\": \"Decimal\"                     },                     \"sink\": {                         \"name\": \"ListPrice\",                         \"type\": \"Integer\"                     }                 },             ]         }"
			}
		},
		"annotations": []
	}
}